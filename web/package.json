{
  "name": "klc-frontend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "engines": {
    "node": ">=10.13"
  },
  "scripts": {
    "start": "next dev",
    "build": "next build",
    "prod": "next start",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write **/*.{js,ts,tsx}",
    "lint": "eslint . --ext ts --ext tsx --ext js --ext .gql --ext .graphql",
    "test": "jest",
    "test-all": "yarn lint && yarn type-check && yarn test",
    "schema:codegen": "gqlg --schemaFilePath ./schema/schema.graphql --destDirPath ./__generated__ --enableOriginalQuery --depthLimit 5 && prettier --write --loglevel silent __generated__/**/*.gql",
    "codegen": "graphql-codegen --config codegen/codegen.yml && yarn schema:codegen",
    "typegen": "graphql-codegen --config codegen/typegen.yml"
  },
  "dependencies": {
    "@apollo/client": "3.1.3",
    "@styled-system/css": "5.1.5",
    "dayjs": "1.8.33",
    "graphql": "15.3.0",
    "nanoid": "3.1.12",
    "next": "9.5.2",
    "next-pwa": "3.1.1",
    "next-secure-headers": "2.0.0",
    "next-seo": "4.7.3",
    "polished": "3.6.5",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-lazyload": "3.0.0",
    "styled-components": "5.1.1",
    "styled-system": "5.1.5"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.17.8",
    "@graphql-codegen/fragment-matcher": "1.17.8",
    "@graphql-codegen/introspection": "1.17.8",
    "@graphql-codegen/near-operation-file-preset": "1.17.10",
    "@graphql-codegen/schema-ast": "1.17.8",
    "@graphql-codegen/typescript": "1.17.8",
    "@graphql-codegen/typescript-operations": "1.17.8",
    "@graphql-codegen/typescript-react-apollo": "2.0.6",
    "@testing-library/react": "10.4.8",
    "@types/grecaptcha": "3.0.1",
    "@types/gtag.js": "0.0.3",
    "@types/jest": "26.0.9",
    "@types/lodash": "4.14.159",
    "@types/node": "14.0.27",
    "@types/react": "16.9.46",
    "@types/styled-components": "5.1.2",
    "@types/styled-system": "5.1.10",
    "@typescript-eslint/eslint-plugin": "3.9.0",
    "@typescript-eslint/parser": "3.9.0",
    "babel-eslint": "10.1.0",
    "babel-jest": "26.3.0",
    "babel-plugin-graphql-tag": "3.0.0",
    "eslint": "7.6.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-graphql": "4.0.0",
    "eslint-plugin-jsx-a11y": "6.3.1",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.20.6",
    "eslint-plugin-react-hooks": "4.0.8",
    "file-loader": "6.0.0",
    "gql-generator-type": "1.0.17",
    "husky": "4.2.5",
    "jest": "26.4.0",
    "jest-watch-typeahead": "0.6.0",
    "lint-staged": "10.2.11",
    "prettier": "2.0.5",
    "typescript": "3.9.7",
    "url-loader": "4.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn type-check"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn lint",
      "yarn format"
    ]
  }
}
